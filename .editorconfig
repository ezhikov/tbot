root=true

[*.*]
indent_style=space
end_of_line=lf
encoding=utf-8
insert_final_newline=true
indent_size=4

[*.js]
indent_size=2
trim_trailing_whitespaces=true
max_line_length=100
quote_type=single
curly_bracket_next_line=false
spaces_around_operators=true
spaces_around_brackets=inside
indent_brace_style=K&R
